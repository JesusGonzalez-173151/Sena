<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BienvenidaB"
    android:orientation="vertical"
    android:background="@color/white">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/boton_back"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="318dp"
            android:layout_marginRight="300dp"
            android:scaleType="center"
            android:src="@drawable/bienvenidatop_1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/sera_sencillo_facil_t"
        android:textSize="25sp"
        android:fontFamily="@font/objectsans_heavy"
        android:textColor="@color/bienvenidas_title"
        />


    <TextView
        android:layout_width="223dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:fontFamily="@font/objectsans_regular"
        android:gravity="top"
        android:text="@string/sera_sencillo_facil_p"
        android:textSize="15sp"
        android:textColor="@color/background_color"
        />

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/cara_festejo"
        android:layout_gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/boton_next"
        android:textColor="@color/white"
        />

</LinearLayout>

