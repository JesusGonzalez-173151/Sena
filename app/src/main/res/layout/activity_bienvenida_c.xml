<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BienvenidaC"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boton_back"
                android:background="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="800dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="300dp"
                    android:scaleType="center"
                    android:src="@drawable/bienvenidatop_1" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="@string/una_nueva_aventura_p"
                android:textSize="25sp"
                android:fontFamily="@font/objectsans_heavy"
                android:textColor="@color/bienvenidas_title"
                />

            <TextView
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/una_nueva_aventura_t"
                android:textSize="15sp"
                android:fontFamily="@font/objectsans_regular"
                android:textColor="@color/grey_motivation"
                />

            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/cara_lente"
                android:layout_gravity="center"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:background="@drawable/boton_next"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>