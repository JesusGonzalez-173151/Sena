<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfiguracionPerfil"
    android:background="@color/grey_motivation">

    <ImageView
        android:layout_width="93dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/logoGrafico2" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuracion del perfil"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="@color/background_color"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de telefono"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/background_color"
        />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/TextPhone"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_button3"
            android:ems="10"
            android:textColor="@color/background_color"
            android:text="MX +52"
            android:textAlignment="center"
            android:inputType="phone" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button3"
            android:ems="10"
            android:textColor="@color/background_color"
            android:text="xxx-xxx-xxx"
            android:textAlignment="center"
            android:inputType="phone" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/background_color"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/background_color"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPersonName"
        android:text="Escribe aqui tu nombre completo"
        android:background="@drawable/round_button3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar nombre de usuario"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:textColor="@color/background_color"
        />
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Mis Tarjetas"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Tarjetas resgistradas"
            android:textSize="20dp"
            />

    </TableRow>

    <EditText
        android:id="@+id/tarjetas"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button3"
        android:ems="10"
        android:textColor="@color/background_color"
        android:text="xxx-xxx-xxx-xxx"
        android:inputType="number" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Eliminar tarjeta"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Ingresar nueva tarjeta"
            android:textSize="20dp" />
        
    </TableRow>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="En estos momentos cuentas con una version gratuita de Sena: Finanzas Perosnales."
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/background_color"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Mejora tu renmiento haciendote miembro distinguido!"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/background_color"
        />

    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button3"
        android:text="Senna PRO"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>