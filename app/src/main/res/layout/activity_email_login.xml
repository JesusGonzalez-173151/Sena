<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EmailLogin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutLogin"
        android:paddingHorizontal="30dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:layout_width="74.32dp"
                    android:layout_height="74.32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/logosena_naranja" />

                <TextView
                    android:textColor="@color/bienvenidas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Iniciar sesión"
                    android:fontFamily="@font/objectsans_regular"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/orange_relleno"
                    android:fontFamily="@font/objectsans_regular"
                    />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/editTextCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingLeft="15dp"
                        android:ems="10"
                        android:textColor="@color/black"
                        android:hint="Ingrese su correo electrónico"
                        android:textColorHint="@color/gray_hint"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/round_button3"
                        />



                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/orange_relleno"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/objectsans_regular"
                    />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:hint="**************"
                    android:textColorHint="@color/gray_hint"
                    android:inputType="textPassword"
                    android:background="@drawable/round_button3"
                    />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Recuérdame"
                        android:textSize="12sp"
                        android:fontFamily="@font/objectsans_slanted"
                        android:textColor="@color/background_color"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRecuperarPass"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="65dp"
                        android:textColor="@color/bienvenidas_title"
                        android:text="@string/RecuperarPass"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:fontFamily="@font/objectsans_regular"
                        android:background="@color/white"
                        />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_registrarse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_0"
                        android:textColor="@android:color/white"
                        android:text="Regístrate"
                        android:fontFamily="@font/objectsans_heavy"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:layout_marginRight="15dp"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_ingresar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/boton_1"
                        android:textColor="@android:color/white"
                        android:text="Ingresar"
                        android:fontFamily="@font/objectsans_heavy"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        />

                </TableRow>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>