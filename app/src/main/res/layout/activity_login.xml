<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/registerlayout"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boton_back"
                    />

                <ImageView
                    android:layout_width="93dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/logosena_naranja" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Verifcacion"
                    android:textColor="@color/bienvenidas_title"
                    android:textSize="30dp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Por favor de ingresa el codigo de verificacion enviado a tu numero telefonico"
                    android:layout_gravity="center"
                    android:textColor="@color/background_color"
                    android:textSize="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:text="Codigo Enviado a +52 *** *** XX XX"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:text="Este codigo expirara en 03:17"/>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp">
                    <EditText
                        android:id="@+id/TextNumber1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:ems="1"
                        android:background="@drawable/round_button2"
                        android:inputType="number" />
                    <EditText
                        android:id="@+id/TextNumber2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:ems="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_button2"
                        android:inputType="number" />
                    <EditText
                        android:id="@+id/TextNumber3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:ems="1"
                        android:background="@drawable/round_button2"
                        android:inputType="number" />
                    <EditText
                        android:id="@+id/TextNumber4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:ems="1"
                        android:background="@drawable/round_button2"
                        android:inputType="number" />
                </TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:textColor="@color/orange_yellow_inicio"
                    android:text="Reenviar codigo de verificacion"/>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/boton_next"
                    android:textSize="40sp"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutLogin"
        android:visibility="visible"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:layout_width="93dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/logosena_naranja" />

                <TextView
                    android:textColor="@color/bienvenidas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciar Sesion"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero de telefono"
                    android:textSize="25sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/orange_yellow_inicio"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/TextPhone"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/round_button3"
                    android:ems="10"
                    android:textColor="@color/background_color"
                    android:text="MX +52"
                    android:textAlignment="center"
                    android:inputType="phone" />
                <EditText
                    android:id="@+id/Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button3"
                    android:ems="10"
                    android:textColor="@color/background_color"
                    android:hint="@string/telefono"
                    android:textAlignment="center"
                    android:inputType="phone" />



            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrasenia"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/orange_yellow_inicio"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="10"
                android:textColor="@color/background_color"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="20dp"
                android:inputType="textPassword"

                android:background="@drawable/round_button3"/>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recuerdame"
                    android:textColor="@color/background_color"/>

                <Button
                    android:id="@+id/btnRecuperarPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="30dp"
                    android:textColor="@color/orange_yellow_inicio"
                    android:text="@string/RecuperarPass"
                     />

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/btnregistrarse"
                    android:layout_width="189dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/boton_2"
                    android:text="Registrate"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                     />

                <Button
                    android:id="@+id/btnlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/boton_1"
                    android:text="Ingresar"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                     />
                </TableRow>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
