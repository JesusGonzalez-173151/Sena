<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_motivation">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tu_mayor_motivacion_para_ahorrar_t"
        android:textColor="@color/bienvenidas_title"
        android:textSize="25sp"
        android:fontFamily="@font/objectsans_heavy"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tu_mayor_motivacion_para_ahorrar_q"
        android:textColor="@color/grey_cuales"
        android:textSize="15sp"
        android:fontFamily="@font/objectsans_regular"
        android:layout_gravity="center"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:id="@+id/row1"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/boton_4opciones"
            android:text="Viajar"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:button="@android:color/transparent"
            android:textSize="17sp"
            android:fontFamily="@font/objectsans_heavy"
            />
        <RadioButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Emprender"
            android:background="@drawable/boton_4opciones"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:textSize="17sp"
            android:fontFamily="@font/objectsans_heavy"
            android:textColor="@color/white"
            />

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:id="@+id/row2"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Otro"
            android:background="@drawable/boton_4opciones"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:textSize="17sp"
            android:fontFamily="@font/objectsans_heavy"
            android:textColor="@color/white"
            />
        <RadioButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Ropa"
            android:background="@drawable/boton_4opciones"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:textSize="17sp"
            android:fontFamily="@font/objectsans_heavy"
            android:textColor="@color/white"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tu_mayor_motivacion_para_ahorrar_p"
            android:textAlignment="center"
            android:fontFamily="@font/objectsans_regular"
            android:textColor="@color/grey_cuales"
            />


        <Button
            android:id="@+id/btn_next"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/boton_2"
            android:text="@string/btn_text_ahorremos"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:fontFamily="@font/objectsans_heavy"
            />

    </LinearLayout>

</LinearLayout>