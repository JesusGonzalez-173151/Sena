<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_motivation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boton_back"
                android:background="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/objectsans_heavy"
        android:text="@string/Tu_mayor_motivacion_para_ahorrar_t"
        android:textAlignment="center"
        android:textColor="@color/bienvenidas_title"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/objectsans_regular"
        android:text="@string/Tu_mayor_motivacion_para_ahorrar_q"
        android:textColor="@color/grey_cuales"
        android:textSize="15sp" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:id="@+id/row1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/boton_viajar"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/boton_emprender"
            android:textColor="@color/white"
        />

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:id="@+id/row2"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/boton_otro"
            android:id="@+id/boton_otro"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/boton_ropa"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/objectsans_regular"
            android:layout_marginHorizontal="95dp"
            android:text="@string/Tu_mayor_motivacion_para_ahorrar_p"
            android:textAlignment="center"
            android:textColor="@color/grey_cuales"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_4"
            android:fontFamily="@font/objectsans_heavy"
            android:text="@string/btn_text_ahorremos"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textAllCaps="false"
             />

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>