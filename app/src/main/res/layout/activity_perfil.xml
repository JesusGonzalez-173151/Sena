            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="LVL.0"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:textColor="@color/background_color"/>



