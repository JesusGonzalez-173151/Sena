<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_motivation">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoal,Ana"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center"
        />

    </TableRow>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabra del dia"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="40sp"
        />

    <SearchView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button3"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Metas"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:id="@+id/row1"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/round_button2"
            android:text="+"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:background="@drawable/round_button2"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:background="@drawable/round_button2"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:background="@drawable/round_button2"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcancia - LVL - 0"
            android:textAlignment="center"
            android:layout_gravity="center"/>


        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que paso con el dinero?, cuentanos sube de nivel"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <Button
                android:layout_gravity="center"
                android:id="@+id/btnIngresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:text="Ingresar"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginRight="15dp"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/btnEgresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:text="Egresar"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"/>
        </TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sera Pro"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button3"
            />
    </LinearLayout>

</LinearLayout>