<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_motivation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/cara_lente" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:text="¡Hola,Ana!"
            android:textColor="@color/bienvenidas_title"
            android:textSize="30dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palabra del dia"
            android:textColor="@color/yellow_inicio"
            android:textSize="20dp"
            android:layout_marginLeft="40sp"
            />

        <SearchView
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button3"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:id="@+id/row"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="155dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/boton_redondo"
                android:button="@android:color/transparent"
                android:fontFamily="@font/objectsans_slanted"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/grey_motivation"
                android:textSize="17sp" />


            <RadioButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/boton_redondo"
                android:button="@android:color/transparent"
                android:fontFamily="@font/objectsans_slanted"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RadioGroup>


        <TableRow
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Ahorros"
                android:textColor="@color/orange_yellow_inicio"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="Gastos"
                android:textColor="@color/bienvenidas_title"
                android:textSize="20dp" />

        </TableRow>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Metas"
            android:textColor="@color/orange_yellow_inicio"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:id="@+id/row1"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/round_button2"
                android:text="+"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:button="@android:color/transparent"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="+"
                android:background="@drawable/round_button2"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="center"
                android:button="@android:color/transparent"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="+"
                android:background="@drawable/round_button2"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="center"
                android:button="@android:color/transparent"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="+"
                android:background="@drawable/round_button2"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="center"
                android:button="@android:color/transparent"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </RadioGroup>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />



            <TextView
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcancia - LVL - 0"
                android:textAlignment="center"
                android:layout_gravity="center"/>


            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Que paso con el dinero?"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/orange_yellow_inicio"/>

            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Cuentanos y sube de nivel?"
                android:textAlignment="center"
                android:layout_gravity="center"/>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/btnIngresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_button"
                    android:text="Ingresar"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                     />

                <Button
                    android:id="@+id/btnEgresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/round_button"
                    android:text="Egresar"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    />
            </TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button3"
                android:text="Sera Pro"
                 />
        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>