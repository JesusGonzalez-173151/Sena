<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TarjetaRegistro"
    android:background="@drawable/fondo_inicio"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boton_back"
                />

            <ImageView
                android:layout_width="93dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logosena_blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PRO"
                android:textColor="@color/white"
                android:textSize="30sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sincroniza tu tarjeta"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo del titular"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/editTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/background_color"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="20dp"
                android:inputType="textPersonName"
                android:text="Escribe aqui nombre completo"
                android:background="@drawable/round_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de tarjeta"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/numeroTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_button"
                android:ems="17"
                android:textColor="@color/background_color"
                android:textAlignment="center"
                android:inputType="number" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de expiracion"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    />

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/editMonth"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:ems="5"
                    android:background="@drawable/round_button"
                    android:inputType="datetime"
                    />

            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de tarjeta"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/type_tarjet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/background_color"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="20dp"
                android:inputType="text"
                android:background="@drawable/round_button"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/boton_redondo"
                android:text=">"
                android:textColor="@color/bienvenidas_title"
                android:textSize="40sp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>