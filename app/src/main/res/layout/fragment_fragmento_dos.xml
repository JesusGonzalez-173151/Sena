<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmento_dos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trazado" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boton_back"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="5dp"
            android:text="@string/sera_sencillo_facil_t"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/objectsans_heavy"
            android:textColor="@color/bienvenidas_title"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="105dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/objectsans_regular"
            android:text="@string/sera_sencillo_facil_p"
            android:textAlignment="center"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cara_festejo"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

        <ImageButton
            android:id="@+id/botonP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/boton_next"/>

    </LinearLayout>
</FrameLayout>